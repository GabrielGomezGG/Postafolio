---
const { project } = Astro.props;
---

<div class="card_project">
    <div class="content_project">
        <h3>{project.title}</h3>
        <p>
            {project.description}
        </p>
    </div>
    <img src={project.image} alt="image project" />
</div>

<style>
    .card_project {
        max-width: 90%;
        /* height: 300px; */
        /* max-height: 400px; */
        /* background-color: #f5f5f5; */
        margin-bottom: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;

        box-shadow: 3px 3px 0 rgba(76, 72, 61, 0.6);
        border: 1px solid var(--primary);

        h3 {
            margin: 0;
            padding: 8px 0px 8px 8px;
            background-color: var(--primary);
            color: var(--onPrimary);
            min-height: 22px;
        }

        p {
            margin: 8px;
            color: var(--primary);
        }

        .content_project {
            width: 100%;
        }

        img {
            width: 90%;
            background-color: var(--primary);
            box-shadow: none;
            margin: 8px;
        }
    }
</style>
