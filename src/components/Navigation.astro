<style>
    a {
        /* text-decoration: none; */
    }

    .nav-links {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        justify-items: center;
        list-style: none;
        row-gap: 1rem;
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
    }

    @media screen and (min-width: 768px) {
