---
import ButtonNier from "./ButtonNier.astro";

interface Props {
  platform: string;
  username: string;
  icon: string;
}

const { platform, username, icon } = Astro.props;
---

{username.length < 6 ? 
  <a href={platform}>
    <ButtonNier text={username} icon={icon} className="button_icon"/>
  </a> 
  :
  <a href={`https://www.${platform}.com/${username}`}>
    <ButtonNier text={platform} icon={icon} className="button_icon"/>
  </a>
}


