---
import BaseLayout from "./BaseLayout.astro";
import ItemsButton from "../components/ItemsButton.astro";
import ItemBody from "../components/ItemBody.astro";
import Content from "../components/Content.astro";

const { title, items, id, itemHeight } = Astro.props;
---

<Content title={title} id={id}>
    <div class="main" id={id}>
        <!-- <ItemsButton items={items} /> -->
        <ItemBody items={items} itemHeight/>
    </div>
</Content>

<style>
    .main {
        display: flex;
        flex-direction: column;
        /* align-items: center; */
        /* justify-content: center; */
        padding: 2rem;
        gap: 1rem;
    }
    @media (width < 480px) {
        .main {
            padding: 1rem;
        }
    }
</style>
