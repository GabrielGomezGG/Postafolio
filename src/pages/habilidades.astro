---
import Content from "../components/Content.astro";
import BaseLayoutWithItems from "../layouts/BaseLayoutWithItems.astro";

const title = "Habilidades";
const subtitle = "";

const skills = [
    {
        title: "Android",
        className: "button1",
        body: "Kotlin | Android SDK | Jetpack Compose | XML | Kotlin Multiplatform | MVVM | MVP | Flow | LiveData | Corrutinas | Retrofit | ROOM | SQLDelight | OkHTTP | Ktor Client | Junit | Mockk | MockWebServer | Apollo Client".split(
            " | ",
        ),
    },
    {
        title: "Backend",
        className: "button2",
        body: "Firebase | Java | Spring Boot | Spring REST | Spring Data | Spring MVC".split(
            " | ",
        ),
    },
    {
        title: "Frontend",
        className: "button3",
        body: "HTML | CSS | JavaScript | TypeScript | React | Astro".split(" | "),
    },
    {
        title: "Herramientas",
        className: "button4",
        body: "Docker | Git | Github | Figma | Scrum | Postman | UML".split(
            " | ",
        ),
    },
    {
        title: "Base de Datos",
        className: "button5",
        body: "SQL | MySQL | SQL Server | MongoDB".split(" | "),
    },
    {
        title: "Habilidades Blandas",
        className: "button6",
        body: "Proactivo | Adaptabilidad | Trabajo en equipo | Comunicaci√≥n | Responsabilidad | Flexibilidad".split(
            " | ",
        ),
    },
];
---

<!-- <BaseLayoutWithItems title={title} subtitle={subtitle} items={skills} id="skills"/> -->
<Content title={title} subtitle={subtitle} id="projects">
    <div class="skills">
        <!-- {projects.map((project) => <ItemProject project={project} />)} -->
         {skills.map((skill) => (
                <div class="text_content">
                    <h3>{skill.title}</h3>
                    <p>
                        <ul>
                            {skill.body.map((item) => (
                                <li>{item}</li>
                            ))}
                        </ul>
                    </p>
                </div>
            ))}
    </div>
</Content>

<style>

    .skills {
        padding-left: 2rem;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 8px;
        display: flex;
        flex-wrap: wrap;
        li {
            margin: 4px;
            padding: 6px;
            background-color: var(--primary);
            color: var(--onPrimary);
            border-radius: 4px;
        }
    }

    @media (width < 480px) {
        .skills {
            padding-left: 1rem;
            display: flex;
            flex-direction: column;
            align-items: none;
            width: 90%;
        }
    }
</style>
