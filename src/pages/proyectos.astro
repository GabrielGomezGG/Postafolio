---
import Content from "../components/Content.astro";
import ItemProject from "../components/ItemProject.astro";

const title = "Proyectos";
const subtitle = "";

const projects = [
    {
        isPlayStore: true,
        title: "Spora: Guardián del Bosque",
        description:
            "Spora es una app educativa para niños y niñas que enseña sobre sustentabilidad y el cuidado del medio ambiente de una manera divertida. Acompañá a Champy y Mushy en una emocionante aventura, llena de minijuegos, desafíos, y actividades para aprender cómo proteger la naturaleza mientras te diviertís. ¡Unite a Spora y ayudá a crear un mundo más verde!",
        tecnologies: [
            "Kotlin",
            "Android",
            "Firebase",
            "TensorFlow",
            "Jetpack Compose",
            "Coroutines",
            "Retrofit",
            "Material Design",
            "Clean Architecture",
            "MVVM",
            "Repository Pattern",
            "Dependency Injection",
        ],
        image: "/spora.png",
        link: "https://play.google.com/store/apps/details?id=com.gg.spora",
    },
    {
        isPlayStore: false,
        title: "TripOut",
        description:
            "TripOut es tu compañero de viaje personal, donde puedes planificar, compartir y descubrir nuevas aventuras. Crea fácilmente viajes personalizados, desde el destino hasta la fecha, compártelos con amigos y familiares, y recibe recomendaciones de viajes cercanos para ampliar tus horizontes.",
        tecnologies: [
            "Kotlin",
            "Android",
            "Jetpack Compose",
            "Google Maps Api",
            "Coroutines",
            "Retrofit",
            "Material Design",
            "Clean Architecture",
            "MVVM",
            "Repository Pattern",
            "Dependency Injection",
            "Unit Testing",
        ],
        image: "/trip_out.webp",
        link: "https://github.com/GabrielGomezGG/TripOut",
    },
    // {
    //     title: "Say GG",
    //     description: "Say GG es una aplicación que te conecta con la emoción de los torneos de videojuegos. Utilizando la API de GraphQL de start.gg, te permite buscar torneos, recibir recomendaciones basadas en tu ubicación actual y explorar detalles de cada torneo. Say GG te ofrece una experiencia personalizada y segura para disfrutar al máximo del mundo de los eSports.",
    //     tecnologies: ["Kotlin", "Android", "Jetpack Compose", "GraphQL", "Apollo Client", "Dependency Injection", "MVVM", "Repository Pattern", "Coil", "Material Design", "Clean Architecture"],
    //     image: "/startgg.webp",
    //     link: "https://github.com/GabrielGomezGG/SayGG"
    // },
];
---

<Content title={title} subtitle={subtitle} id="projects">
    <div class="projects">
        {projects.map((project) => <ItemProject project={project} />)}
    </div>
</Content>

<style>
    .projects {
        padding-left: 1rem;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
    }

    @media (width > 1024px) {
        .projects {
            padding-left: 2rem;
            display: flex;
            flex-direction: column;
            align-items: none;
        }
    }
</style>
